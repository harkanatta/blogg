if (.Platform$OS.type == 'windows') {
  Sys.setlocale("LC_CTYPE", "Icelandic_Iceland.1252")
  Sys.setlocale("LC_TIME", "Icelandic_Iceland.1252")
} else {
  Sys.setlocale("LC_COLLATE", "is_IS.UTF-8")
  Sys.setlocale("LC_CTYPE", "is_IS.UTF-8")
  Sys.setlocale("LC_MONETARY", "is_IS.UTF-8")
  Sys.setlocale("LC_NUMERIC", "is_IS.UTF-8")
  Sys.setlocale("LC_TIME", "is_IS.UTF-8")
}
